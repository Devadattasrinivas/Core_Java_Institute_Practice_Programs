package codegnan;

public class pyrmidpattern {
	public static void printPyramid(int rows)
    {
     for(int i=1;i<=5;i++) {
    	 for(int space=1;space<=rows-i;space++) {
      		  System.out.print(" ");

    	 }
   	  for(int j=1;j<=i;j++) {
   		  System.out.print("*");
   	  }
   	  System.out.println();
     }
     
    }
	

	public static void main(String[] args) {
		pyrmidpattern.printPyramid(5);
	}

}
